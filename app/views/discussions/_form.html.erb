<%= form_for @discussion do |f| %>
    <% if @discussion.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@discussion.errors.count, "error") %> prohibited
                this discussion from being saved:
            </h2>
            <ul>
                <% @discussion.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="form_area">
        <div class="upper">
            <p>
                <%= f.label :author, :class => "label" %><br>
                <%= f.text_field :author, :class => "author" %>
            </p>
        </div>
        <div class="notepad">
            <p>
                <%= f.label :body, :class => "label" %><br>
                <%= f.text_area :body, :class => "body" %>
            </p>
        </div>
        <div class="submit">
            <p>
                <%= f.submit '저장', data: { confirm: '저장하시겠습니까?' } %>
            </p>
        </div>
    </div>
<% end %>