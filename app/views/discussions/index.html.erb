<!DOCTYPE html>
<html>
    <head>
        <title>Main Page</title>
    </head>
    <body>
        <div class="page_wrap">
            <div class="title">
                <%= link_to home_index_path, :class => 'link' do %>
                    <%= image_tag('manchester_united_logo.png', :class => "logo") %>
                    <h1>
                        Manchester United FC
                    </h1>
                <% end %>
            </div>
            <div class='toolbar'>
                <%= link_to about_index_path do %> About<% end %>
                <%= link_to manager_index_path do %> Manager<% end %>
                <%= link_to squad_index_path do %> Squad<% end %>
                <%= link_to recent_index_path do %> Recent<% end %>
                <%= link_to trophies_index_path do %> Trophies<% end %>
                <%= link_to photos_index_path do %> Photos<% end %>
                <%= link_to discussions_path do %> Discussions<% end %>
            </div>
            <div class="discussion_create">
                <%= render 'form' %>
            </div>
            <div class='discussion_wrap'>
                <% @discussions.each do |discussion| %>
                    <table class="discussion_table">
                        <tbody>
                            <tr>
                                <td><strong><%= discussion.author %></strong></td>
                                <td class="create_time"><%= discussion.created_at.to_date %></td>
                            </tr>
                            <tr>
                                <td colspan="2", class='discussion_body'>
                                    <%= discussion.body %>
                                    <%= link_to "[...]", discussion_path(discussion), :class => 'link' %>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                <% end %>
                <div class="to_top">
                    <%= link_to "TOP", discussions_path, :class => "link" %>
                </div>
            </div>
        </div>
    </body>
</html>